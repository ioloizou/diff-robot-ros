<?xml version="1.0"?>

<robot xmlns:xacro="http://ww.ros.org/wiki/xacro" name="diff_robot">
    
    <link name="base_footprint">
    </link>

    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.8 0.7 0.1" />
            </geometry>
            <material name="LightGrey">
                <color rgba="0.7 0.7 0.7 1.0"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0 0 0" />
            </geometry>
        </collision>
        <inertial>
            <mass value="0.0"/>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
        </inertial>
    </link>

    <joint name="base_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0 0 0.135" rpy="0 0 0"/>
        <axis xyz="0 0 0"/>
    </joint>

    <!-- Right Wheel -->
    
    <xacro:property name='side' value='right'/>
    <xacro:property name='reflect' value='1'/>


    <link name="wheel_${side}_link">
        <visual>
            <geometry>
                <cylinder radius="0.15" length="0.1"/>
            </geometry>
            <material name="Red">
                <color rgba="1. 0. 0. 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.15" length="0.1"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.0"/>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
        </inertial>
    </link>

    <joint name="wheel_${side}_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_${side}_link"/>
        <origin xyz="0.250 ${reflect*0.4} 0" rpy="1.57 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>
    
    <!-- Rear Left Wheel -->

    <xacro:property name='side' value='left'/>
    <xacro:property name='reflect' value='-1'/>

    <link name="wheel_${side}_link">
        <visual>
            <geometry>
                <cylinder radius="0.15" length="0.1"/>
            </geometry>
            <material name="Red">
                <color rgba="1. 0. 0. 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.15" length="0.1"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.0"/>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
        </inertial>
    </link>

    <joint name="wheel_${side}_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_${side}_link"/>
        <origin xyz="0.250 ${reflect*0.4} 0" rpy="1.57 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>


</robot>